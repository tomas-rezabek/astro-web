---
interface User {
	id: number;
	name: string;
}
const response = await fetch("https://jsonplaceholder.typicode.com/users");
const users = (await response.json()) as User[];
---

<style>
	table {
		font-family: arial, sans-serif;
		border-collapse: collapse;
    margin: auto;
		border-spacing: 0;
		border-collapse: separate;
		border-radius: 32px;
		border: 1px solid black;
  overflow: hidden;
	}
  thead {
    background-color: var(--fialova);
    color: var(--bila);
  }
	td,
	th {
		text-align: left;
		padding: 12px;
	}

	tr:nth-child(even) {
		background-color: var(--fialova);
		color: var(--bila);
	}
</style>
<table>
	<thead>
		<th>ID</th>
		<th>Name</th>
	</thead>
	<tbody>
		{
			users.map((user) => (
				<tr>
					<td>{user.id}</td>
					<td>{user.name}</td>
				</tr>
			))
		}
	</tbody>
</table>
