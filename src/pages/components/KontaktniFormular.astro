<style>
	.column {
		display: flex;
		flex-direction: column;
		row-gap: 0px;
	}
	.row {
		row-gap: 20px;
		display: flex;
		margin: 0.5rem;
		gap: 20px;
	}
	input,
	textarea {
		border: solid 1px #f7f7f7;
		background-color: var(--bila);
		padding: 0.75rem 1rem;
		width: 100%;
		font-size: 1rem;
		border-radius: 4px;
	}
	.phoneNumber {
		width: 100%;
	}
	.odeslat {
		border: none;
		border-radius: var(--default-radius);
		background-color: var(--fialova);
		color: var(--bila);
		padding: 0.5rem;
		margin: 0.25rem;
		width: 100%;
		font-size: 1.25rem;
		cursor: pointer;
	}
</style>

<div class="formularWrapper">
	<form action="#" method="POST">
		<div class="column">
			<div class="row">
				<input type="text" class="name" placeholder="Jméno a příjmení" />
				<input type="email" placeholder="E-mail" />
			</div>
			<div class="row">
				<input type="text" class="phoneNumber" placeholder="Telefonní číslo" />
			</div>
			<div class="row">
				<textarea name="zprava" id="zprava" placeholder="Zpráva" rows="5"
				></textarea>
			</div>
			<button type="submit" class="odeslat">Odeslat zprávu</button>
		</div>
	</form>
</div>
